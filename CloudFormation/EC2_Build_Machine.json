    "Resources": {
        "EC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {"Ref": "KeyName"},
                "InstanceType": {"Ref": "InstanceType"},
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "AWSInstanceType2Arch",
                                {
                                    "Ref": "InstanceType"
                                },
                                "Arch"
                            ]
                        }
                    ]
                },
                "IamInstanceProfile": {"Ref": "RoleName"},
                "SecurityGroups": [
                    {
                        "Ref": "EC2SecurityGroup"
                    }
                ],
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sdc",
                        "VirtualName": "ephemeral0"
                    }
                ],
                "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
                            "#!/bin/bash -x\n",
                            "touch /tmp/01-yum-update\n",
                             
                            "sudo yum -y update\n",
                            "sudo yum -y install git mercurial cmake\n",
                            
                            "touch /tmp/02-git-clone\n",
                            
                            "git clone https://github.com/BrianEnigma/StaticBinaries.git > output.txt\n",
                            
                            "touch /tmp/03-build\n",
                            
                            "cd StaticBinaries\n",
                            
                            "./build_all.sh > output.txt\n",
                            "#./fake_build_all.sh >> output.txt\n",
                            
                            "touch /tmp/04-upload\n",
                            
                            "./push_to_bucket_via_role.sh ",
                            {"Ref": "BinaryBucketName"},
                            " ",
                            {"Ref": "AWS::Region"},
                            "\n",
                            
                            "#sudo shutdown -h now\n"
                ]]}}
            }
        },
        "EC2SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SSH access",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": {
                            "Ref": "SSHLocation"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "Instance": {
            "Value": {
                "Fn::GetAtt": [
                    "EC2Instance",
                    "PublicDnsName"
                ]
            },
            "Description": "DNS Name of the newly created EC2 instance"
        }
